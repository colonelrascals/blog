<h1>Edit My Stuff</h1>
<%= form_for :article, url: articles_path(@article), method: :patch  do |f| %>
  <% if @article.errors.any? %>
  <div class="error">
      <h2>
        <%= pluralize(@article.errors.count, "error") %>
        prohibited
          this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.eac do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
  </div>
  <% end %>

  <p>
    <%=  f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit  %>
  </p>

<% end %>
<%= link_to "Back", articles_path %>
